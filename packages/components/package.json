{
  "name": "@repo-pak/components",
  "version": "0.0.0",
  "main": "./src/index.ts",
  "module": "./src/index.ts",
  "private": true,
  "sideEffects": false,
  "license": "MIT",
  "scripts": {
    "build": "pnpm run clean:build && tsup",
    "clean:build": "rm -rf dist",
    "dev": "tsup --watch",
    "test": "vitest --run",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "devDependencies": {
    "@repo-pak/config": "workspace:*",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "jsdom": "^27.3.0",
    "react": "^19.2.3",
    "tsup": "^8.5.1",
    "typescript": "~5.9.3",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "react": "^19.1.0",
    "styled-components": "^6.0.0"
  },
  "dependencies": {
    "@repo-pak/styles": "workspace:*",
    "styled-components": "^6.1.19"
  }
}