{
  "name": "@root/web",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean",
    "preview": "vite preview",
    "___utils___": "",
    "clean:node_modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "generate:api": "pnpm -r generate:openapi:be && pnpm -r generate:openapi:fe",
    "dev:services": "concurrently --names \"users,todos\" -c \"blue,green\" \"cd services/users && pnpm run dev\" \"cd services/todos && pnpm run dev\""
  },
  "devDependencies": {
    "@repo-pak/config": "workspace:*",
    "@types/node": "^25.0.3",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.50.0",
    "vite": "^7.3.0"
  }
}